@prefix :        <#> .
@prefix fuseki:  <http://jena.apache.org/fuseki#> .
@prefix rdf:     <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:    <http://www.w3.org/2000/01/rdf-schema#> .
@prefix tdb2:    <http://jena.apache.org/2016/tdb#> .
@prefix ja:      <http://jena.hpl.hp.com/2005/11/Assembler#> .

## Manufacturing Dataset Configuration

:service_tdb_all  a                   fuseki:Service ;
        rdfs:label                    "TDB2 manufacturing" ;
        fuseki:name                   "manufacturing" ;
        fuseki:serviceQuery           "sparql", "query" ;
        fuseki:serviceQueryAuth       "sparql_auth", "query_auth" ;
        fuseki:serviceUpdate          "update" ;
        fuseki:serviceUpdateAuth      "update_auth" ;
        fuseki:serviceUpload          "upload" ;
        fuseki:serviceReadWriteGraphStore "data" ;
        fuseki:serviceReadGraphStore  "get" ;
        fuseki:dataset                :manufacturing_dataset .

:manufacturing_dataset a              tdb2:DatasetTDB2 ;
        tdb2:location                 "/fuseki/databases/manufacturing" ;
        tdb2:unionDefaultGraph        true .

## Additional service for read-only access
:service_manufacturing_readonly a     fuseki:Service ;
        rdfs:label                    "Manufacturing (Read-only)" ;
        fuseki:name                   "manufacturing-ro" ;
        fuseki:serviceQuery           "sparql", "query" ;
        fuseki:dataset                :manufacturing_dataset .
