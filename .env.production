# Production Environment Configuration
# Copy this file to .env.local and update values for your environment

# Fuseki SPARQL Endpoint
FUSEKI_ENDPOINT=http://localhost:3030/manufacturing/sparql
NEXT_PUBLIC_FUSEKI_ENDPOINT=http://localhost:3030/manufacturing/sparql

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=manufacturing
MYSQL_USER=r2rml_user
MYSQL_PASSWORD=secure_password

# R2RML Processing Configuration
R2RML_MAPPINGS_PATH=./r2rml/manufacturing-mappings.ttl
R2RML_OUTPUT_PATH=./output

# Development Settings
NODE_ENV=production
FORCE_REAL_SPARQL=true

# Docker Configuration (for docker-compose setup)
COMPOSE_PROJECT_NAME=manufacturing-r2rml

# Security Settings (Change in production!)
ADMIN_PASSWORD=admin123
JWT_SECRET=your-secure-jwt-secret-key-here

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=true

# Performance Settings
MAX_QUERY_TIMEOUT=30000
SPARQL_CACHE_TTL=300
