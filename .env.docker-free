# Docker-Free Production Environment Variables

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=docker-free-production

# Local SPARQL Endpoint (instead of external Fuseki)
FUSEKI_ENDPOINT=/api/local-sparql
NEXT_PUBLIC_FUSEKI_ENDPOINT=/api/local-sparql

# Database Settings (for future SQLite integration)
DATABASE_TYPE=local
DATABASE_PATH=./data/manufacturing.db

# Feature Flags
FORCE_REAL_SPARQL=true
USE_LOCAL_ENDPOINTS=true
ENABLE_MOCK_DATA=false

# API Configuration
SPARQL_TIMEOUT=10000
MAX_QUERY_RESULTS=1000
